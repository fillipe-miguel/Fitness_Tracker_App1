<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout

        android:id="@+id/item_container"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/FFF0C48A"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"

        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_img_icon"

            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@string/imc_icon_description"
            android:src="@drawable/ic_reshot_icon_health" />

        <TextView
            android:id="@+id/item_txt_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_imc" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>




